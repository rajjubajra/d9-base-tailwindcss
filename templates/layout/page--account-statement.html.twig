      const {relationships:{field_invoice_details:{links:{related}}}} = invoice;
      console.log(related.href);
      newArr.push({id: invoice.id, inv_num: field_old_invoice_number});

      const response_details = await fetch(related.href, {
        method: "GET",
        headers:{
          Accept: 'accplication/vnd.api+json'
        }
      })
      const details = await response_details.json();
      console.log("DETAILS",details);
      details.data.forEach((item)=>{
        newPara.push({id: invoice.id, inv_num: field_old_invoice_number, date: field_old_invoice_date, rate:item.attributes.field_rate})
