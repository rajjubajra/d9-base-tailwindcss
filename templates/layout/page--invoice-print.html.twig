<script>


  /** FETCH INVOICE **/
  const getInvoices = async () => {

  const url = '/d9-base/rest/invoice-print/28?_format=json';

  const response = await fetch(url, {
    method: "GET",
    headers:{
      Accept: 'application/vnd.api+json'
    }
  });

  const invoices = await response.json();

  console.log(invoices);

  /** View in Browser innerHTML **/
  /** Display INVOICE NUMBER **/
  const oldInvoiceNumber = invoices[0].field_old_invoice_number
  document.getElementById("invoice-num").innerHTML = oldInvoiceNumber.length > 0 ? oldInvoiceNumber[0].value : ' - ';

  /** Display INVOICE DATE **/
  const oldInvoiceDate = invoices[0].field_old_invoice_date;
  document.getElementById("invoice-date").innerHTML = oldInvoiceDate.length > 0 ? oldInvoiceDate[0].value : ' - ';

  /** Display INVOICE DESCTION, QTY, RATE, AMOUNT
  * RUN PARAGRAPH FUNTION for Invoice Description, Qty, Rate **/
  const paragraphArr = invoices[0].field_invoice_details;
  //console.log("PARA", paragraphArr);
  getParagraphs(paragraphArr);

  /** Display CLIENT ADDRESS **/
  const clientId = invoices[0].field_client_id_invoice[0].target_id;
  console.log("CLEINT ID",clientId);
  getClientAddress(clientId);

  }

  getInvoices();



  /** FETCH INVOICE DETAILS 
  * [ description, quantity, rate ] 
  * from PARAGRAPHS 
  **/
  const getParagraphs = async (arr) => {

    /** New Arr : Paragraphs IDs Arr **/
    const idArr = [];
    arr.map(item=>{
      console.log("id Arr",item.target_id, typeof(item.target_id));
      idArr.push(item.target_id)
    })

    const url = `/d9-base/rest/paragraphs`;
  
    const response = await fetch(url, {
      method: "GET",
      headers:{
        Accept: 'application/vnd.api+json'
      }
    });
  
    const paragraphs = await response.json();
  
    const invoiceDetailArr = [];
    paragraphs.map(item=>{
      if(idArr.includes(parseInt(item.id))){ /** if true **/
      invoiceDetailArr.push({
        desc: item.field_description, 
        qty: item.field_quantity, 
        rate: item.field_rate})
      }
    });

    console.log("PARAGRAPHS",paragraphs);
    console.log("ID Arr", idArr);
    console.log("INVOICE DETAILS ",invoiceDetailArr);

    invoiceDetailArr.map(item=>{
      let amount = item.qty === "" ? item.rate : item.qty * item.rate;
      let rate = item.qty === "" ? '-' : item.rate;
      let qty = item.qty === "" ? " - " : item.qty;

      console.log(item.desc, item.qty, item.rate);

      let Items = `<tr>
        <td class="p-1">${item.desc}</td>
        <td class="text-center">${qty}</td>
        <td class="text-right pr-1">${rate}</td>
        <td class="text-right pr-1">${amount}</td>
      </tr>`;

      document.getElementById("invoice-details").innerHTML = Items;

      let totalAmount = amount++;
      document.getElementById("total-amount").innerHTML = totalAmount;

    })

  }



  /** FETCH CLIENT ADDRESS **/
  const getClientAddress = async (id) => {

    const url = `/d9-base/rest/clients-list-invoice/${id}?_format=json`;

    const response = await fetch(url, {
      method: "GET",
      headers:{
        Accept: 'application/vnd.api+json'
      }
    });
  
    const clientAdd = await response.json();
    console.log(clientAdd);

    /** CLIENT NAME **/
    document.getElementById("client-name").innerHTML = clientAdd[0].field_client_s_name;
    document.getElementById("address-line-1").innerHTML = clientAdd[0].field_client_s_address_line_1;
    document.getElementById("address-line-2").innerHTML = clientAdd[0].field_client_s_address_line_2;
    document.getElementById("address-email").innerHTML = clientAdd[0].field_client_s_email;
    document.getElementById("address-tel").innerHTML = clientAdd[0].field_client_s_tel;
    
  }





  



</script>